<%- include('../../layouts/header.ejs') %>
<%- include('../../layouts/navigation.ejs') %>

<div class="container mt-4">
    <div class="row">
       <div class="col-sm-3">
          <%- include('../../layouts/sidebar.ejs') %>
       </div>
       <div class="col-sm-9">
         <h4>Roles
            <a href="/admin/roles" style="float: right;"><button type="button" class="btn btn-primary">Back</button></a>
        </h4>

        <form class="row g-3 mt-4" method="POST" action="/admin/roles">
          <div class="col-md-12">
            <label for="validationCustom01" class="form-label">Role name</label>
            <input type="text" name="name" class="form-control" id="validationCustom01" required placeholder="Enter Role">
          </div>
          <div class="col-md-12">
            <label for="validationCustom04" class="form-label">status</label>
            <select name="status" class="form-select" id="validationCustom04" required>
              <option value="1">Active</option>
              <option value="2">InActive</option>
            </select>
            <div class="invalid-feedback">
              Please select a valid state.
            </div>
          </div>        
          <div class="col-12">
            <button class="btn btn-primary" type="submit">Submit form</button>
          </div>
       </form>
       </div>
    </div>
 </div>



